{
  "version": 2,
  "rewrites": [
    { "source": "/manifest.json", "destination": "/api/manifest" },
    { "source": "/subtitles/download:path*", "destination": "/api/download" },
    { "source": "/:resource/:type/:id.json", "destination": "/api/stremio" },
    { "source": "/(.*)", "destination": "/api/stremio" }
  ],
  "functions": {
    "api/*.js": {
      "maxDuration": 30
    }
  }
}
